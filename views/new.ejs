<% include partials/header %>

<!-- Rendering the Jumbotron -->
<div class="jumbotron">
    <h1><%= title %></h1>
    <p><%= message %></p>  
</div>

<!-- Rendering the container -->
<div class="container w-50">
	<form action="/campgrounds" method="POST">
	<div class="form-group">
		<label for="name">Campground:</label>
		<input name = "name" class="form-control form-control-lg" type="text" placeholder="campground">
	</div>
	<div class="form-group">
		<label for="image">Picture:</label>
		<input name = "image" class="form-control form-control-lg" type="text" placeholder="image URL">
	</div>
	<div class="form-group">
  		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
	</form>
</div>

<% include partials/footer %>