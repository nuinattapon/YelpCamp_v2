<% include partials/header %>

<!-- Rendering the Jumbotron -->
<div class="jumbotron">
    <h1><%= title %></h1>
    <p><%= message %></p>  
</div>

<!-- Rendering the container -->
<div class="container w-50">
	<form action="/signup" method="POST">
	<div class="form-group">
		<label for="email">Enter email:</label>
		<input name = "username" class="form-control form-control-lg" type="text" placeholder="email">
	</div>
	<div class="form-group">
		<label for="password">Password:</label>
		<input name = "password" class="form-control form-control-lg" type="password" placeholder="password">
	</div>
	<div class="form-group">
  		<button type="submit" class="btn btn-primary">Sign up</button>
	</div>
	</form>
</div>

<% include partials/footer %>